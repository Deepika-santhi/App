                 <img src="images/icon-plus.svg" class="icons">
                 <div class="score"><%= e.score%></div>
                 <img src="images/icon-minus.svg" class="minusicons">
                </div>
                 
             </div>


             <div class="second">
                <div class="top">
                    
                   
                   
                   
                   
                   
                   
                   <p class="create"><%= e.createdAt%></p>
